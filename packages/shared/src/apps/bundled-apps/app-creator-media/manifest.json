{
  "id": "app.creator-media",
  "name": "自媒体创作",
  "version": "1.0.0",
  "type": "app",
  "author": {
    "name": "CreatorFlow Team",
    "email": "team@creatorflow.com"
  },
  "description": "完整的自媒体创作工作流，支持小红书、抖音、公众号等平台",
  "license": "MIT",
  "homepage": "https://creatorflow.com/apps/creator-media",
  "pricing": {
    "type": "free"
  },
  "capabilities": {
    "skills": [
      "material-organize",
      "script-create",
      "topic-research",
      "content-review",
      "platform-adaptation",
      "viral-content-analysis",
      "topic-to-publish-flow",
      "data-review",
      "baoyu-article-illustrator",
      "baoyu-comic",
      "baoyu-cover-image",
      "baoyu-image-gen",
      "baoyu-infographic",
      "baoyu-post-to-wechat",
      "baoyu-post-to-x",
      "baoyu-xhs-images"
    ]
  },
  "workspace": {
    "defaultDirectory": "~/CreatorFlow/Media",
    "directoryStructure": {
      "素材库": {
        "图片": {},
        "视频": {},
        "文本": {},
        "音频": {}
      },
      "脚本库": {
        "草稿": {},
        "待审核": {},
        "已发布": {}
      },
      "发布记录": {
        "小红书": {},
        "抖音": {},
        "公众号": {}
      },
      "数据分析": {}
    },
    "defaultSettings": {
      "autoSave": true,
      "autoBackup": true,
      "backupInterval": 3600,
      "language": "zh-CN",
      "permissionMode": "allow-all",
      "cyclablePermissionModes": ["safe", "ask", "allow-all"],
      "thinkingLevel": "think"
    },
    "localMcpServers": {
      "enabled": true
    },
    "presetData": {
      "labels": [
        {
          "id": "content-creation",
          "name": "内容创作",
          "color": { "light": "#8B5CF6", "dark": "#A78BFA" },
          "children": [
            { "id": "to-create", "name": "待创作", "color": { "light": "#3B82F6", "dark": "#60A5FA" } },
            { "id": "creating", "name": "创作中", "color": { "light": "#F59E0B", "dark": "#FBBF24" } },
            { "id": "to-review", "name": "待审核", "color": { "light": "#8B5CF6", "dark": "#A78BFA" } },
            { "id": "published", "name": "已发布", "color": { "light": "#10B981", "dark": "#34D399" } }
          ]
        },
        {
          "id": "platform",
          "name": "平台",
          "color": { "light": "#EC4899", "dark": "#F472B6" },
          "children": [
            { "id": "xiaohongshu", "name": "小红书", "color": { "light": "#FF2442", "dark": "#FF6B81" } },
            { "id": "douyin", "name": "抖音", "color": { "light": "#000000", "dark": "#333333" } },
            { "id": "wechat", "name": "公众号", "color": { "light": "#07C160", "dark": "#2DC76D" } },
            { "id": "bilibili", "name": "B站", "color": { "light": "#00A1D6", "dark": "#23ADE5" } }
          ]
        }
      ],
      "statuses": [
        { "id": "draft", "label": "草稿", "category": "open" },
        { "id": "review", "label": "待审核", "category": "open" },
        { "id": "scheduled", "label": "待发布", "category": "open" },
        { "id": "live", "label": "已发布", "category": "closed" }
      ]
    }
  },
  "permissions": ["filesystem", "network", "clipboard"],
  "compatibility": {
    "platform": ">=1.0.0",
    "os": ["macos", "windows", "linux"]
  },
  "marketplace": {
    "category": "content-creation",
    "tags": ["自媒体", "创作", "AI", "小红书", "抖音", "公众号", "内容创作"],
    "changelog": "## v1.0.0\n- 初始版本发布\n- 支持小红书、抖音、公众号、B站等主流平台\n- 完整的创作工作流支持\n- 内置 8 个核心技能：素材整理、脚本创作、选题研究、内容审核、平台适配、爆款分析、选题到发布流程、数据复盘"
  },
  "plugins": {
    "compatible": [
      "plugin.data-analytics",
      "plugin.seo-optimizer"
    ],
    "recommended": [
      "plugin.data-analytics"
    ]
  }
}
