{
  "id": "app.smart-office",
  "name": "智能办公",
  "version": "1.0.0",
  "type": "app",
  "author": {
    "name": "CreatorFlow Team",
    "email": "team@creatorflow.com"
  },
  "description": "智能办公助手，支持 Word、PPT、Excel、PDF 等办公文档的创建、编辑和数据处理",
  "license": "MIT",
  "pricing": {
    "type": "free"
  },
  "capabilities": {
    "skills": [
      "docx",
      "pptx",
      "xlsx",
      "pdf",
      "baoyu-slide-deck",
      "baoyu-compress-image"
    ]
  },
  "workspace": {
    "defaultDirectory": "~/CreatorFlow/Office",
    "directoryStructure": {
      "工作文档": {
        "Word": {},
        "PPT": {},
        "Excel": {},
        "PDF": {}
      },
      "模板": {},
      "输出": {}
    },
    "defaultSettings": {
      "autoSave": true,
      "language": "zh-CN",
      "permissionMode": "safe",
      "cyclablePermissionModes": ["safe", "ask", "allow-all"],
      "thinkingLevel": "think"
    },
    "localMcpServers": {
      "enabled": true
    }
  },
  "permissions": ["filesystem", "network"],
  "compatibility": {
    "platform": ">=1.0.0",
    "os": ["macos", "windows", "linux"]
  },
  "marketplace": {
    "category": "office",
    "tags": ["办公", "Word", "PPT", "Excel", "PDF", "文档处理"],
    "changelog": "## v1.0.0\n- 初始版本发布\n- 支持 Word 文档创建和编辑\n- 支持 PPT 演示文稿创建和编辑\n- 支持 Excel 表格处理和数据分析\n- 支持 PDF 文档处理"
  }
}
