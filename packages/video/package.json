{
  "name": "@sprouty-ai/video",
  "version": "0.3.1",
  "license": "Apache-2.0",
  "description": "Video creation engine for Sprouty AI - Remotion integration, compositions, templates, and rendering",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "bin": {
    "sprouty-ai-video-mcp": "./src/mcp-server/index.ts"
  },
  "scripts": {
    "dev": "remotion studio",
    "build": "remotion bundle",
    "render": "remotion render",
    "mcp:dev": "bun run --hot src/mcp-server/index.ts",
    "mcp:start": "bun run src/mcp-server/index.ts",
    "mcp:start:http": "bun run src/mcp-server/index.ts --transport http",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./compositions": "./src/compositions/index.ts",
    "./templates": "./src/templates/index.ts",
    "./components": "./src/components/index.ts",
    "./hooks": "./src/hooks/index.ts",

    "./skills": "./src/skills/index.ts",
    "./utils": "./src/utils/index.ts",
    "./mcp-server": "./src/mcp-server/index.ts",
    "./mcp-server/utils/paths": "./src/mcp-server/utils/paths.ts",
    "./mcp-server/*": "./src/mcp-server/*"
  },
  "dependencies": {
    "@remotion/bundler": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/player": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "@remotion/transitions": "^4.0.422",
    "@sprouty-ai/core": "workspace:*",
    "fastmcp": "^3.32.0",
    "nanoid": "^5.1.5",
    "remotion": "^4.0.0",
    "zod": "^4.0.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "fast-check": "^3.23.0"
  }
}
