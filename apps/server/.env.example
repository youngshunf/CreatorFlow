# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgres://postgres:password@localhost:5432/creatorflow

# Redis (optional, for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# WeChat Pay (https://pay.weixin.qq.com)
WECHAT_APP_ID=wx1234567890abcdef
WECHAT_MCH_ID=1234567890
WECHAT_API_KEY=your-api-key
WECHAT_API_V3_KEY=your-api-v3-key
WECHAT_SERIAL_NO=your-certificate-serial-no
WECHAT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
WECHAT_NOTIFY_URL=https://api.example.com/api/billing/notify/wechat

# Alipay (https://open.alipay.com)
ALIPAY_APP_ID=2021001234567890
ALIPAY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
ALIPAY_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
ALIPAY_NOTIFY_URL=https://api.example.com/api/billing/notify/alipay
ALIPAY_RETURN_URL=https://app.example.com/payment/success
ALIPAY_SANDBOX=false

# Aliyun SMS (阿里云短信服务 https://dysms.console.aliyun.com)
ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret
ALIYUN_SMS_SIGN_NAME=你的短信签名
ALIYUN_SMS_TEMPLATE_CODE=SMS_123456789

# OAuth (optional)
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx
APPLE_CLIENT_ID=xxx
APPLE_CLIENT_SECRET=xxx

# Anthropic (for agent execution)
ANTHROPIC_API_KEY=sk-ant-xxx

# App
APP_URL=http://localhost:3000
DESKTOP_DEEPLINK_SCHEME=creatorflow

# Data storage
DATA_DIR=/data/users
